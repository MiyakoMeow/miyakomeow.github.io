{
  "name": "miyakomeow-site",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "tasks": {
    "dev": "vite dev",
    "build": "deno run --allow-read --allow-write --allow-env scripts/generate-blog-index.ts && vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "deno fmt",
    "format:check": "deno fmt --check",
    "lint": "deno lint .",
    "lint:fix": "deno lint . --fix"
  },
  "fmt": {},
  "lint": {
    "include": ["src/**/*.{ts,js,svelte}"],
    "exclude": ["node_modules", ".svelte-kit", ".vite", "dist", "build"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "unstable": ["fmt-component"],
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "types": [
      "src/vite-env.d.ts",
      "src/mdsvex.d.ts"
    ]
  },
  "imports": {
    "@inlang/paraglide-js": "npm:@inlang/paraglide-js@^2.6.0",
    "@sveltejs/adapter-static": "npm:@sveltejs/adapter-static@^3.0.10",
    "@sveltejs/kit": "npm:@sveltejs/kit@^2.49.1",
    "@sveltejs/vite-plugin-svelte": "npm:@sveltejs/vite-plugin-svelte@^6.2.1",
    "@tailwindcss/forms": "npm:@tailwindcss/forms@^0.5.10",
    "@tailwindcss/typography": "npm:@tailwindcss/typography@^0.5.19",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.17",
    "cookie": "npm:cookie@^1.1.1",
    "gray-matter": "npm:gray-matter@^4.0.3",
    "katex": "npm:katex@^0.16.27",
    "mdsvex": "npm:mdsvex@^0.12.6",
    "opencc-js": "npm:opencc-js@^1.0.5",
    "rehype-katex": "npm:rehype-katex@^7.0.0",
    "rehype-stringify": "npm:rehype-stringify@^10.0.0",
    "remark-gfm": "npm:remark-gfm@^4.0.1",
    "remark-math": "npm:remark-math@^6.0.0",
    "remark-rehype": "npm:remark-rehype@^11.0.0",
    "svelte": "npm:svelte@^5.45.6",
    "svelte-check": "npm:svelte-check@^4.3.4",
    "tailwindcss": "npm:tailwindcss@^4.1.17",
    "types": "npm:types@^0.1.1",
    "typescript": "npm:typescript@^5.9.3",
    "unified": "npm:unified@^11.0.0",
    "vite": "npm:vite@^7.2.6"
  },
  "exports": {
  }
}
