{
  "name": "miyakomeow.github.io",
  "version": "1.0.0",
  "description": "Personal website built with Svelte and Vite",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "svelte-check && vite build",
    "preview": "vite preview",
    "type-check": "svelte-check",
    "type-check:watch": "svelte-check --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "generate:html": "echo 'HTML generation is handled by Vite plugin during build/dev'"
  },
  "dependencies": {
    "katex": "^0.16.27",
    "opencc-js": "^1.0.5",
    "svelte": "^5.46.0"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@eslint/core": "^1.0.0",
    "@eslint/css": "^0.14.1",
    "@eslint/js": "^9.39.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^25.0.3",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-better-tailwindcss": "^3.8.0",
    "eslint-plugin-svelte": "^3.13.1",
    "eslint-plugin-tailwind-canonical-classes": "^1.1.0",
    "globals": "^16.5.0",
    "mdsvex": "^0.12.6",
    "postcss": "^8.5.6",
    "postcss-nesting": "^13.0.2",
    "prettier": "^3.7.4",
    "prettier-plugin-svelte": "^3.4.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "svelte-check": "^4.3.4",
    "tailwind-csstree": "^0.1.4",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0",
    "vite": "^7.3.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "keywords": [
    "svelte",
    "vite",
    "personal-website"
  ],
  "author": "",
  "license": "MIT"
}
