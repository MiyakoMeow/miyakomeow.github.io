{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": ["node"]
  },
  "include": [
    "vite.config.ts",
    "vite-plugins/**/*.ts",
    "config/**/*.ts",
    "src/config/**/*.ts",
    "src/utils/**/*.ts",
    "src/env.d.ts"
  ]
}
